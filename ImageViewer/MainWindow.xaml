<Window x:Class="ImageViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:ImageViewer.ViewModels"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" Height="800" Width="1200"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResizeWithGrip"
        AllowDrop="True"
        Drop="Window_Drop">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="32"  
                      ResizeBorderThickness="5"
                      CornerRadius="0"
                      GlassFrameThickness="0"/>
    </WindowChrome.WindowChrome>
    
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <!-- Global Shortcuts -->
    <Window.InputBindings>
        <KeyBinding Key="Left" Command="{Binding PreviousImageCommand}"/>
        <KeyBinding Key="Right" Command="{Binding NextImageCommand}"/>
        <KeyBinding Key="Esc" Command="{Binding GoBackCommand}"/>
    </Window.InputBindings>

    <Border Background="#1E1E1E" BorderBrush="#333333" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="32"/>   <!-- Custom Title Bar -->
                <RowDefinition Height="*"/>    <!-- Content -->
            </Grid.RowDefinitions>

            <!-- Custom Title Bar -->
            <Grid Grid.Row="0" Background="#252526">
                <!-- Title -->
                <TextBlock Text="{Binding WindowTitle}" 
                           Unloaded="TextBlock_Unloaded"
                           Foreground="#999999" 
                           VerticalAlignment="Center" 
                           Margin="10,0,0,0"
                           FontFamily="Segoe UI"
                           FontSize="12"/>

                <!-- Window Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" WindowChrome.IsHitTestVisibleInChrome="True">
                    <Button Content="&#xE921;" FontFamily="Segoe MDL2 Assets" 
                            Style="{StaticResource CaptionButtonStyle}" 
                            Click="Minimize_Click"/>
                    <Button x:Name="MaximizeButton" Content="&#xE922;" FontFamily="Segoe MDL2 Assets" 
                            Style="{StaticResource CaptionButtonStyle}" 
                            Click="Maximize_Click"/>
                    <Button Content="&#xE8BB;" FontFamily="Segoe MDL2 Assets" 
                            Style="{StaticResource CloseButtonStyle}" 
                            Click="Close_Click"/>
                </StackPanel>
            </Grid>

            <!-- Main Content Area -->
            <ContentControl Grid.Row="1" Content="{Binding CurrentView}"/>
        </Grid>
    </Border>
</Window>
