<UserControl x:Class="ImageViewer.Views.EditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:ImageViewer.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid Background="#1E1E1E">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="280"/> <!-- Right Panel -->
        </Grid.ColumnDefinitions>

        <!-- Main Canvas Area -->
        <Border Grid.Column="0" Background="#111111" Margin="10" CornerRadius="8" ClipToBounds="True">
             <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Background="Transparent" PanningMode="Both">
                <Grid>
                     <Image x:Name="ImgDisplay" Source="{Binding DisplayImage}" RenderTransformOrigin="0.5,0.5"/>
                     <!-- Crop Overlay -->
                     <Canvas x:Name="CropCanvas" Background="Transparent" 
                             MouseDown="CropCanvas_MouseDown" 
                             MouseMove="CropCanvas_MouseMove" 
                             MouseUp="CropCanvas_MouseUp">
                         <Rectangle x:Name="SelectionRect" Stroke="#007ACC" StrokeThickness="2" Visibility="Collapsed"/>
                     </Canvas>
                </Grid>
            </ScrollViewer>
        </Border>

        <!-- Right Side Panel -->
        <Border Grid.Column="1" Background="#252526" BorderBrush="#333333" BorderThickness="1,0,0,0">
            <StackPanel Margin="15">
                <TextBlock Text="Edit Photo" Foreground="White" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,20"/>

                <!-- TRANSFORM SECTION -->
                <TextBlock Text="Transform" Foreground="#AAAAAA" FontSize="12" Margin="0,0,0,10"/>
                <Grid Margin="0,0,0,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Rotate -->
                    <Button Grid.Row="0" Grid.Column="0" Command="{Binding RotateLeftCommand}" Margin="0,0,5,5" 
                            Style="{StaticResource CaptionButtonStyle}" Background="#333337" ToolTip="Rotate Left">
                         <StackPanel Orientation="Horizontal">
                             <TextBlock Text="&#xE7AD;" FontFamily="Segoe MDL2 Assets" Foreground="White"/>
                             <TextBlock Text="-90°" Foreground="White" Margin="5,0,0,0" FontSize="10"/>
                         </StackPanel>
                    </Button>
                    <Button Grid.Row="0" Grid.Column="1" Command="{Binding RotateRightCommand}" Margin="5,0,0,5" 
                            Style="{StaticResource CaptionButtonStyle}" Background="#333337" ToolTip="Rotate Right">
                         <StackPanel Orientation="Horizontal">
                             <TextBlock Text="&#xE7AD;" FontFamily="Segoe MDL2 Assets" Foreground="White" RenderTransformOrigin="0.5,0.5">
                                 <TextBlock.RenderTransform><ScaleTransform ScaleX="-1"/></TextBlock.RenderTransform>
                             </TextBlock>
                             <TextBlock Text="+90°" Foreground="White" Margin="5,0,0,0" FontSize="10"/>
                         </StackPanel>
                    </Button>

                    <!-- Flip -->
                    <Button Grid.Row="1" Grid.Column="0" Command="{Binding FlipHorizontalCommand}" Margin="0,5,5,0" 
                            Style="{StaticResource CaptionButtonStyle}" Background="#333337" ToolTip="Flip Horizontal">
                         <StackPanel Orientation="Horizontal">
                             <TextBlock Text="&#xE840;" FontFamily="Segoe MDL2 Assets" Foreground="White"/>
                             <TextBlock Text="Flip H" Foreground="White" Margin="5,0,0,0" FontSize="10"/>
                         </StackPanel>
                    </Button>
                    <Button Grid.Row="1" Grid.Column="1" Command="{Binding FlipVerticalCommand}" Margin="5,5,0,0" 
                            Style="{StaticResource CaptionButtonStyle}" Background="#333337" ToolTip="Flip Vertical">
                         <StackPanel Orientation="Horizontal">
                             <TextBlock Text="&#xE840;" FontFamily="Segoe MDL2 Assets" Foreground="White" RenderTransformOrigin="0.5,0.5">
                                 <TextBlock.RenderTransform><RotateTransform Angle="90"/></TextBlock.RenderTransform>
                             </TextBlock>
                             <TextBlock Text="Flip V" Foreground="White" Margin="5,0,0,0" FontSize="10"/>
                         </StackPanel>
                    </Button>
                </Grid>

                <!-- CROP -->
                <Button Click="OnCropClicked" Margin="0,0,0,20" Padding="10" Background="#333337" BorderThickness="0">
                     <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                         <TextBlock Text="&#xE123;" FontFamily="Segoe MDL2 Assets" Foreground="#007ACC" Margin="0,0,10,0"/>
                         <TextBlock Text="Apply Crop Selection" Foreground="White"/>
                     </StackPanel>
                </Button>

                <Separator Background="#444444" Margin="0,0,0,20"/>

                <!-- ENHANCE SECTION -->
                <TextBlock Text="Enhance" Foreground="#AAAAAA" FontSize="12" Margin="0,0,0,15"/>
                
                <!-- Brightness -->
                <TextBlock Text="Brightness" Foreground="#CCCCCC" Margin="0,0,0,5"/>
                <Slider Minimum="-100" Maximum="100" Value="{Binding Brightness}" 
                        AutoToolTipPlacement="TopLeft" TickFrequency="10" IsSnapToTickEnabled="False" Margin="0,0,0,15"/>

                <!-- Contrast -->
                <TextBlock Text="Contrast" Foreground="#CCCCCC" Margin="0,0,0,5"/>
                <Slider Minimum="0.1" Maximum="3.0" Value="{Binding Contrast}" 
                        AutoToolTipPlacement="TopLeft" TickFrequency="0.1" IsSnapToTickEnabled="False" Margin="0,0,0,15"/>

                <Separator Background="#444444" Margin="0,10,0,20"/>

                <!-- ACTIONS -->
                <Button Command="{Binding SaveImageCommand}" Margin="0,0,0,10" Padding="15" 
                        Background="#007ACC" BorderThickness="0" Cursor="Hand" FontWeight="Bold">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="&#xE74E;" FontFamily="Segoe MDL2 Assets" Foreground="White" Margin="0,0,10,0"/>
                        <TextBlock Text="Save Changes" Foreground="White"/>
                    </StackPanel>
                </Button>

                <Button Command="{Binding DataContext.GoBackCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                        Content="Cancel" Margin="0" Padding="10" Background="Transparent" Foreground="#AAAAAA" BorderThickness="1" BorderBrush="#444444"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
